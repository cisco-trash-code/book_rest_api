<h1 class="text-center mb-4">{{title}}</h1>

<form action="/api/books" method="POST" class="mb-4 mx-auto col-6">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="suthor">Author</label>
        <input type="text" name="author" class="form-control">
    </div>
    <input type="submit" value="Add Book" class="btn btn-primary btn-block">
</form>

<ul class="list-group col-6 mx-auto">
    {{#each books}}
    <li class="list-group-item">{{this.name}}: {{this.author}}</li>
    {{/each}}
</ul>

<a href="/api/books" class="btn btn-light btn-block mt-4 col-6 mx-auto">Visit API</a>